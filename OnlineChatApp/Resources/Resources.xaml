            <SolidColorBrush x:Key="Background" Color="#FF1E8856" />
            <SolidColorBrush x:Key="Foreground" Color="#FFEFF8F4" />
            <SolidColorBrush x:Key="PivotHeaderForegroundSelectedBrush" Color="white" />
